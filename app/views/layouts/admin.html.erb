<!DOCTYPE html>
<html>
  <head>
    <title>管理</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body class="theme-admin">
    <header class="topbar">
      <div class="topbar-inner">
        <div class="brand">
          <%= link_to "Admin Console", admin_root_path, class: "brand-link" %>
        </div>
        <div class="nav-links">
          <%= link_to "商品", admin_items_path, class: "btn btn-ghost" %>
          <%= link_to "カテゴリ", admin_categories_path, class: "btn btn-ghost" %>
          <%= link_to "テーブル", admin_tables_path, class: "btn btn-ghost" %>
          <%= link_to "スタッフ", admin_staffs_path, class: "btn btn-ghost" %>
          <%= link_to "設定", edit_admin_settings_path, class: "btn btn-ghost" %>
          <%= link_to "スタッフ画面へ", staff_root_path, class: "btn btn-ghost" %>
          <%= button_to "ログアウト", destroy_user_session_path, method: :delete, form: { style: "display:inline" }, class: "btn btn-primary" %>
        </div>
      </div>
    </header>
    <div class="toast-stack">
      <%= turbo_frame_tag "flash" do %>
        <% flash.each do |key, value| %>
          <div class="flash <%= key %> toast"><%= value %></div>
        <% end %>
      <% end %>
    </div>
    <main class="app-shell">
      <%= yield %>
    </main>
  </body>
</html>
