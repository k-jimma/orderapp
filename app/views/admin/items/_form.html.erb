<%= form_with model: [:admin, item], local: true, class: "stack-md" do |f| %>
  <% if item.errors.any? %>
    <div class="surface">
      <ul>
        <% item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-2">
    <div>
      <%= f.label :name, "商品名" %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :price, "価格" %>
      <%= f.number_field :price %>
    </div>
    <div>
      <%= f.label :category_id, "カテゴリ" %>
      <%= f.collection_select :category_id, categories, :id, :name %>
    </div>
    <label class="list-inline" style="align-items:center;">
      <%= f.check_box :is_available %>
      <span>販売中</span>
    </label>
  </div>

  <%= f.submit "保存", class: "btn btn-primary" %>
<% end %>
