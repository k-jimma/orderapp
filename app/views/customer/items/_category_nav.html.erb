<div class="stack-sm">
  <div class="badge"><%= category.name %></div>
  <div class="stack-sm">
    <% category.children.order(:sort_order, :name).each_with_index do |child, idx| %>
      <button type="button"
        class="btn btn-ghost"
        style="justify-content:flex-start; padding-left:12px; width:100%;"
        data-category-button="<%= child.id %>"
        <%= active && idx.zero? ? 'data-category-active="true"' : '' %>>
        <%= child.name %>
      </button>
    <% end %>
  </div>
</div>
