<div class="app-shell" style="max-width: 520px;">
  <div class="hero">
    <h2 class="section-title">PINを入力</h2>
    <p class="muted">スタッフから案内されたPINを入力してください。</p>
    <%= form_with url: table_access_path(token: params[:token]), method: :post, local: true, class: "stack-md" do |f| %>
      <div class="stack-sm">
        <%= label_tag :pin, "PIN" %>
        <%= password_field_tag :pin, nil, placeholder: "4桁の数字" %>
      </div>
      <div class="footer-actions">
        <%= f.submit "認証する", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
