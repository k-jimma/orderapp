<div class="app-shell stack-md">
  <div class="card stack-sm">
    <h2 class="section-title">注文明細</h2>
    <table>
      <thead>
        <tr>
          <th>商品</th>
          <th>数量</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @order_items.each do |order_item| %>
          <tr>
            <td><%= order_item.item.name %></td>
            <td><%= order_item.quantity %></td>
            <td><span class="pill status-<%= order_item.status %>"><%= I18n.t("enums.order_item.status.#{order_item.status}") %></span></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="footer-actions">
      <%= link_to "注文状況に戻る", table_order_path(token: params[:token]), class: "btn btn-ghost" %>
    </div>
  </div>
</div>
