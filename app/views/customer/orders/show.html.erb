<div class="app-shell stack-md">
  <div class="hero stack-sm">
    <h2 class="section-title">注文状況</h2>
    <% if @order.billing? %>
      <p class="muted" style="color:#f59e0b;">会計処理中のため追加注文はできません。</p>
    <% else %>
      <p class="muted">追加注文はメニューから行えます。</p>
    <% end %>
    <div class="footer-actions">
      <%= link_to "メニューに戻る", table_items_path(token: params[:token]), class: "btn btn-ghost" %>
    </div>
  </div>

  <div class="card stack-sm">
    <h3 class="section-title">明細</h3>
    <table>
      <thead>
        <tr>
          <th>商品</th>
          <th>数量</th>
          <th>単価</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @order_items.each do |oi| %>
          <tr>
            <td><%= oi.item.name %></td>
            <td><%= oi.quantity %></td>
            <td><%= number_to_currency(oi.unit_price, unit: "¥", precision: 0, format: "%u%n") %></td>
            <td><span class="pill status-<%= oi.status %>"><%= oi.status %></span></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <p>小計: <strong><%= number_to_currency(@order.subtotal, unit: "¥", precision: 0, format: "%u%n") %></strong></p>
  </div>

  <div class="card stack-sm">
    <h3 class="section-title">呼び出し</h3>
    <%= form_with url: table_calls_path(token: params[:token]), method: :post, local: true, class: "grid" do |f| %>
      <div class="grid grid-2">
        <div>
          <%= label_tag "call[kind]", "種別" %>
          <%= select_tag "call[kind]", options_for_select(Call.kinds.keys.map { |k| [k, k] }) %>
        </div>
        <div>
          <%= label_tag "call[message]", "メッセージ (任意)" %>
          <%= text_field_tag "call[message]", nil, placeholder: "会計お願いします 等" %>
        </div>
      </div>
      <div class="footer-actions">
        <%= f.submit "送信", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
