<div class="app-shell stack-md">
  <div class="card stack-sm">
    <h2 class="section-title">呼び出し一覧</h2>
    <table>
      <thead>
        <tr>
          <th>テーブル</th>
          <th>種別</th>
          <th>メッセージ</th>
          <th>ステータス</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @calls.each do |call| %>
          <tr>
            <td><%= call.table.number %></td>
            <td><%= I18n.t("enums.call.kind.#{call.kind}") %></td>
            <td><%= call.message %></td>
            <td><%= I18n.t("enums.call.status.#{call.status}") %></td>
            <td>
              <%= form_with url: staff_call_path(call), method: :patch, local: true, class: "list-inline" do |f| %>
                <%= f.select :status, Call.statuses.keys.map { |status_key| [I18n.t("enums.call.status.#{status_key}"), status_key] }, {}, { name: "call[status]" } %>
                <%= f.submit "更新", class: "btn btn-primary" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
