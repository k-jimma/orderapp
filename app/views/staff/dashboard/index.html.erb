<div class="app-shell stack-md">
  <div class="grid grid-2">
    <section class="card stack-sm">
      <h2 class="section-title">オープン注文</h2>
      <div class="stack-sm">
        <% @open_orders.each do |o| %>
          <div class="surface" style="display:flex; justify-content:space-between; align-items:center;">
            <div>
              <div>テーブル<%= o.table.number %></div>
              <div class="muted">更新: <%= l(o.updated_at, format: :short) %></div>
            </div>
            <%= link_to "詳細", staff_order_path(o), class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </section>

    <section class="card stack-sm">
      <h2 class="section-title">会計中</h2>
      <div class="stack-sm">
        <% @billing_orders.each do |o| %>
          <div class="surface" style="display:flex; justify-content:space-between; align-items:center;">
            <div>
              <div>テーブル<%= o.table.number %></div>
              <div class="muted">更新: <%= l(o.updated_at, format: :short) %></div>
            </div>
            <%= link_to "会計", new_staff_payment_path(order_ids: [o.id]), class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </section>
  </div>

  <section class="card stack-sm">
    <h2 class="section-title">呼び出し</h2>
    <table>
      <thead>
        <tr>
          <th>テーブル</th>
          <th>種別</th>
          <th>メッセージ</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @calls.each do |call| %>
          <tr>
            <td><%= call.table.number %></td>
            <td><%= I18n.t("enums.call.kind.#{call.kind}") %></td>
            <td><%= call.message %></td>
            <td><%= I18n.t("enums.call.status.#{call.status}") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
</div>
