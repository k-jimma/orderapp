// Design tokens
:root {
  --font-base: "Inter", "Noto Sans JP", "Helvetica Neue", system-ui, -apple-system, sans-serif;
  --color-bg: #0f172a;
  --color-surface: rgba(255, 255, 255, 0.06);
  --color-card: rgba(255, 255, 255, 0.08);
  --color-border: rgba(255, 255, 255, 0.12);
  --color-primary: #5eead4;
  --color-primary-strong: #2dd4bf;
  --color-accent: #f59e0b;
  --color-text: #e2e8f0;
  --color-muted: #94a3b8;
  --radius: 14px;
  --shadow: 0 15px 40px rgba(0, 0, 0, 0.35);
  --shadow-soft: 0 10px 24px rgba(0, 0, 0, 0.2);
  --space: 16px;
}

*,
*::before,
*::after {
  box-sizing: border-box;
}

body {
  font-family: var(--font-base);
  margin: 0;
  color: var(--color-text);
  background: radial-gradient(circle at 20% 20%, #1e293b 0%, #0b1020 45%), #0b1020;
  min-height: 100vh;
}

a {
  color: var(--color-primary);
  text-decoration: none;
}

a:hover {
  color: var(--color-primary-strong);
}

img {
  max-width: 100%;
}

.app-shell {
  max-width: 1100px;
  margin: 0 auto;
  padding: 32px 20px 48px;
}

.surface {
  background: var(--color-surface);
  border: 1px solid var(--color-border);
  border-radius: var(--radius);
  padding: 20px;
  box-shadow: var(--shadow-soft);
}

.card {
  background: var(--color-card);
  border: 1px solid var(--color-border);
  border-radius: var(--radius);
  padding: 18px;
  box-shadow: var(--shadow);
}

.section-title {
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 18px;
  margin: 0 0 12px;
}

.badge {
  display: inline-flex;
  align-items: center;
  padding: 4px 10px;
  border-radius: 999px;
  background: var(--color-surface);
  color: var(--color-text);
  border: 1px solid var(--color-border);
  font-size: 12px;
  letter-spacing: 0.01em;
}

.muted {
  color: var(--color-muted);
}

.grid {
  display: grid;
  gap: 16px;
}

.grid-2 {
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
}

.topbar {
  position: sticky;
  top: 0;
  z-index: 20;
  backdrop-filter: blur(14px);
  background: rgba(9, 12, 20, 0.85);
  border-bottom: 1px solid var(--color-border);
}

.topbar-inner {
  max-width: 1100px;
  margin: 0 auto;
  padding: 14px 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
}

.brand {
  font-weight: 700;
  letter-spacing: 0.04em;
  color: var(--color-primary);
}

.nav-links {
  display: flex;
  align-items: center;
  gap: 12px;
  flex-wrap: wrap;
}

.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  padding: 10px 16px;
  border-radius: 12px;
  border: 1px solid transparent;
  background: var(--color-card);
  color: var(--color-text);
  cursor: pointer;
  font-weight: 600;
  transition: transform 0.1s ease, box-shadow 0.2s ease, background 0.2s ease;
}

.btn-primary {
  background: linear-gradient(135deg, var(--color-primary), var(--color-primary-strong));
  color: #051019;
  box-shadow: 0 10px 25px rgba(45, 212, 191, 0.25);
  border-color: rgba(255, 255, 255, 0.08);
}

.btn-ghost {
  background: transparent;
  border-color: var(--color-border);
  color: var(--color-text);
}

.btn:hover {
  transform: translateY(-1px);
}

.btn:active {
  transform: translateY(0);
}

table {
  width: 100%;
  border-collapse: collapse;
  background: var(--color-card);
  border-radius: var(--radius);
  overflow: hidden;
  border: 1px solid var(--color-border);
  box-shadow: var(--shadow-soft);
}

table th,
table td {
  padding: 12px 14px;
  border-bottom: 1px solid var(--color-border);
  text-align: left;
}

table tr:last-child td {
  border-bottom: none;
}

.list-inline {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
}

form {
  display: grid;
  gap: 12px;
}

label {
  color: var(--color-muted);
  font-size: 14px;
}

input,
select,
textarea {
  width: 100%;
  padding: 10px 12px;
  border-radius: 10px;
  border: 1px solid var(--color-border);
  background: rgba(255, 255, 255, 0.04);
  color: var(--color-text);
}

input:focus,
select:focus,
textarea:focus {
  outline: 2px solid var(--color-primary);
  border-color: var(--color-primary);
}

.flash {
  margin: 12px 0;
  padding: 12px 14px;
  border-radius: 12px;
  border: 1px solid var(--color-border);
  background: linear-gradient(120deg, rgba(94, 234, 212, 0.15), rgba(94, 234, 212, 0.05));
}

.flash.notice {
  border-color: rgba(94, 234, 212, 0.5);
}

.flash.alert {
  border-color: rgba(245, 158, 11, 0.6);
  background: linear-gradient(120deg, rgba(245, 158, 11, 0.18), rgba(245, 158, 11, 0.08));
}

.pill {
  display: inline-flex;
  align-items: center;
  padding: 6px 10px;
  border-radius: 999px;
  border: 1px solid var(--color-border);
  background: var(--color-surface);
  font-size: 12px;
}

.status-open { color: #f59e0b; }
.status-billing { color: #38bdf8; }
.status-closed { color: #22c55e; }

.status-new { color: #facc15; }
.status-cooking { color: #38bdf8; }
.status-ready { color: #a855f7; }
.status-served { color: #22c55e; }
.status-canceled { color: #ef4444; }

.section {
  display: grid;
  gap: 10px;
}

.hero {
  padding: 16px 18px;
  background: linear-gradient(135deg, rgba(94, 234, 212, 0.15), rgba(56, 189, 248, 0.15));
  border-radius: var(--radius);
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: var(--shadow-soft);
}

.stack-sm {
  display: grid;
  gap: 8px;
}

.stack-md {
  display: grid;
  gap: 16px;
}

.footer-actions {
  display: flex;
  gap: 12px;
  flex-wrap: wrap;
}

@media (max-width: 720px) {
  .topbar-inner {
    flex-direction: column;
    align-items: flex-start;
  }

  table th,
  table td {
    padding: 10px;
  }

  .btn {
    width: auto;
  }
}
