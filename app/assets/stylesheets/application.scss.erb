// Design tokens
:root {
  --font-base: "Inter", "Noto Sans JP", "Helvetica Neue", system-ui, -apple-system, sans-serif;
  --color-bg: #0f172a;
  --color-surface: rgba(255, 255, 255, 0.06);
  --color-card: rgba(255, 255, 255, 0.08);
  --color-border: rgba(255, 255, 255, 0.12);
  --color-primary: #5eead4;
  --color-primary-strong: #2dd4bf;
  --color-accent: #f59e0b;
  --color-text: #e2e8f0;
  --color-muted: #94a3b8;
  --radius: 14px;
  --shadow: 0 15px 40px rgba(0, 0, 0, 0.35);
  --shadow-soft: 0 10px 24px rgba(0, 0, 0, 0.2);
  --space: 16px;
  --footer-actions-height: 88px;
  --category-drawer-width: 150px;
  --mobile-topbar-height: 72px;
}

/* --- base reset --- */
*,
*::before,
*::after {
  box-sizing: border-box;
}

body {
  font-family: var(--font-base);
  margin: 0;
  color: var(--color-text);
  background: radial-gradient(circle at 20% 20%, #1e293b 0%, #0b1020 45%), #0b1020;
  min-height: 100vh;
}

img {
  max-width: 100%;
}

/* --- links (button以外) --- */
a {
  color: var(--color-primary);
  text-decoration: none;
}

/* ボタン以外のリンクだけ hover で色変更 */
a:hover:not(.btn) {
  color: var(--color-primary-strong);
}

/* --- layout --- */
.app-shell {
  max-width: 1100px;
  margin: 0 auto;
  padding: 32px 20px calc(var(--footer-actions-height) + 32px);
}

.auth-shell {
  padding-top: 130px;
}

.auth-card {
  max-width: 440px;
  margin: 0 auto 40px;
}

.auth-portfolio-grid {
  display: grid;
  gap: 24px;
  grid-template-columns: minmax(320px, 440px) minmax(320px, 1fr);
  align-items: start;
  justify-content: center;
  max-width: 1100px;
  margin: 0 auto;
}

.auth-portfolio-grid .auth-card {
  max-width: 440px;
  margin: 0 auto;
}

.portfolio-qr-card {
  width: 100%;
  margin: 0 auto;
}

.portfolio-qr-list {
  display: grid;
  gap: 16px;
  grid-template-columns: repeat(auto-fit, 160px);
  justify-content: center;
}

.portfolio-qr-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  width: 160px;
}

.portfolio-qr-item .badge,
.portfolio-qr-item .btn {
  width: 100%;
  justify-content: center;
}

@media (max-width: 720px) {
  .auth-portfolio-grid {
    grid-template-columns: 1fr;
  }

  .portfolio-qr-card {
    max-width: 440px;
    width: 100%;
  }

  .portfolio-qr-list {
    grid-template-columns: 1fr;
    justify-items: center;
  }

  .portfolio-qr-item,
  .portfolio-qr-item .badge,
  .portfolio-qr-item .btn {
    width: 220px;
  }

  .portfolio-qr-item img {
    width: 220px;
    height: 220px;
  }
}

.staff-table-switcher {
  margin-top: 32px;
  margin-bottom: 16px;
}

/* --- navigation --- */
.topbar {
  position: sticky;
  top: 0;
  z-index: 20;
  backdrop-filter: blur(14px);
  background: rgba(9, 12, 20, 0.85);
  border-bottom: 1px solid var(--color-border);
}

.topbar-inner {
  max-width: 1100px;
  margin: 0 auto;
  padding: 14px 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
}

.brand {
  font-weight: 700;
  letter-spacing: 0.04em;
  color: var(--color-primary);
  white-space: nowrap;
}

.table-brand {
  display: flex;
  align-items: center;
  gap: 8px;
  flex-wrap: nowrap;
  min-width: 0;
}

.table-brand-title {
  white-space: nowrap;
}

.table-pill {
  white-space: nowrap;
}

.brand-link {
  color: inherit;
  text-decoration: none;
}

.brand-link:hover {
  color: var(--color-primary-strong);
}

.nav-links {
  display: flex;
  align-items: center;
  gap: 12px;
  flex-wrap: nowrap;
}

.table-nav {
  flex-shrink: 0;
}

.nav-links .btn {
  white-space: nowrap;
}

@media (max-width: 1100px) {
  .nav-links {
    gap: 8px;
  }

  .nav-links .btn {
    padding: 8px 10px;
    font-size: 13px;
  }
}

.topbar-nav {
  display: flex;
  align-items: center;
}

.nav-toggle {
  display: none;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  border-radius: 10px;
  border: 1px solid var(--color-border);
  background: rgba(255, 255, 255, 0.08);
  color: var(--color-text);
  cursor: pointer;
}

.nav-toggle-bars {
  width: 18px;
  height: 2px;
  background: currentColor;
  position: relative;
  display: inline-block;
}

.nav-toggle-bars::before,
.nav-toggle-bars::after {
  content: "";
  position: absolute;
  left: 0;
  width: 18px;
  height: 2px;
  background: currentColor;
}

.nav-toggle-bars::before {
  top: -6px;
}

.nav-toggle-bars::after {
  top: 6px;
}

.nav-drawer-backdrop {
  position: fixed;
  inset: 0;
  background: rgba(2, 6, 23, 0.65);
  z-index: 30;
}

.nav-drawer {
  position: fixed;
  top: 0;
  right: 0;
  height: 100%;
  width: 86vw;
  max-width: 320px;
  background: rgba(15, 23, 42, 0.98);
  border-left: 1px solid var(--color-border);
  box-shadow: var(--shadow);
  transform: translateX(100%);
  transition: transform 220ms ease;
  z-index: 40;
  padding: 20px;
  display: grid;
  gap: 16px;
}

.nav-drawer.is-open {
  transform: translateX(0);
}

.nav-drawer-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
}

.nav-drawer-close {
  width: 36px;
  height: 36px;
  border-radius: 10px;
  border: 1px solid var(--color-border);
  background: rgba(255, 255, 255, 0.08);
  color: var(--color-text);
  cursor: pointer;
}

.nav-drawer-links {
  display: grid;
  gap: 10px;
}

/* --- utilities --- */
.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

.grid {
  display: grid;
  gap: 16px;
}

.grid-2 {
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
}

/* --- menu --- */
.menu-grid {
  align-items: start;
  grid-template-columns: 1.5fr 2.5fr;
}

.menu-category {
  align-self: start;
  max-height: calc(100vh - 220px - var(--footer-actions-height));
  overflow: auto;
  scrollbar-width: none;
}

.menu-category::-webkit-scrollbar {
  width: 0;
  height: 0;
}

.menu-category.card {
  padding: 6px;
  background: var(--color-card);
}

.menu-category .stack-sm {
  gap: 6px;
}

.category-drawer-tab,
.category-drawer-backdrop {
  display: none;
}

.category-root {
  border-color: rgba(94, 234, 212, 0.2);
  width: 100%;
  padding-left: 4px;
  padding-right: 4px;
}

.category-root-title {
  font-weight: 600;
  letter-spacing: 0.02em;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 15px;
}

.category-child-list {
  margin-top: 4px;
}

.category-child-card {
  background: transparent;
  border: none;
  padding: 0;
}

.category-child-button {
  width: 100%;
  justify-content: flex-start;
  padding-left: 12px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 14px;
}

.menu-qty-actions {
  display: grid;
  gap: 8px;
  justify-items: end;
  width: 100%;
}

.menu-item {
  display: grid;
  grid-template-columns: 1fr auto;
  grid-template-areas:
    "name name"
    "price actions";
  gap: 6px 12px;
  align-items: center;
}

.menu-item-name {
  grid-area: name;
  line-height: 1.4;
}

.menu-item-price {
  grid-area: price;
}

.menu-item-actions {
  grid-area: actions;
  justify-self: end;
}

.menu-item-actions .qty-stepper {
  margin-top: 0;
  width: 100%;
  justify-content: space-between;
}

.menu-item-actions .btn {
  width: 100%;
  justify-content: center;
}

/* --- spacing helpers --- */
.section {
  display: grid;
  gap: 10px;
}

.stack-sm {
  display: grid;
  gap: 8px;
}

.stack-md {
  display: grid;
  gap: 16px;
}

/* --- footer --- */
.footer-actions {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 14px 20px 20px;
  background: rgba(15, 23, 42, 0.92);
  border-top: 1px solid var(--color-border);
  backdrop-filter: blur(10px);
  z-index: 20;
}

.footer-actions-inner {
  display: flex;
  gap: 12px;
  flex-wrap: wrap;
  max-width: 1100px;
  margin: 0 auto;
}

.surface {
  background: var(--color-surface);
  border: 1px solid var(--color-border);
  border-radius: var(--radius);
  padding: 20px;
  box-shadow: var(--shadow-soft);
}

.card {
  background: var(--color-card);
  border: 1px solid var(--color-border);
  border-radius: var(--radius);
  padding: 18px;
  box-shadow: var(--shadow);
}

/* --- hero block --- */
.hero {
  padding: 16px 18px;
  background: linear-gradient(135deg, rgba(94, 234, 212, 0.15), rgba(56, 189, 248, 0.15));
  border-radius: var(--radius);
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: var(--shadow-soft);
}

.section-title {
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 18px;
  margin: 0 0 12px;
}

.badge {
  display: inline-flex;
  align-items: center;
  padding: 4px 10px;
  border-radius: 999px;
  background: var(--color-surface);
  color: var(--color-text);
  border: 1px solid var(--color-border);
  font-size: 12px;
  letter-spacing: 0.01em;
}

.muted {
  color: var(--color-muted);
}

.pill {
  display: inline-flex;
  align-items: center;
  padding: 6px 10px;
  border-radius: 999px;
  border: 1px solid var(--color-border);
  background: var(--color-surface);
  font-size: 12px;
}

/* --- buttons (a/button/input 全部を統一) --- */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  padding: 10px 16px;
  border-radius: 12px;
  border: 1px solid transparent;
  background: var(--color-card);
  color: var(--color-text);
  cursor: pointer;
  font-weight: 600;
  text-decoration: none; /* a.btn対策 */
  transition: transform 0.1s ease, box-shadow 0.2s ease, background 0.2s ease;
}

.btn:hover {
  transform: translateY(-1px);
}

.btn:active {
  transform: translateY(0);
}

/* a/button/input の hover/focus/active で文字色がブレないように統一 */
.btn,
.btn:hover,
.btn:focus,
.btn:active,
a.btn,
a.btn:hover,
a.btn:focus,
a.btn:active,
button.btn,
button.btn:hover,
button.btn:focus,
button.btn:active,
input.btn,
input.btn:hover,
input.btn:focus,
input.btn:active {
  color: inherit;
}

.btn.btn-primary {
  background: linear-gradient(135deg, var(--color-primary), var(--color-primary-strong));
  color: #051019;
  box-shadow: 0 10px 25px rgba(45, 212, 191, 0.25);
  border-color: rgba(255, 255, 255, 0.08);
}

/* primary は常に黒文字固定 */
.btn.btn-primary:hover,
.btn.btn-primary:focus,
.btn.btn-primary:active {
  color: #051019;
  filter: brightness(1.03);
}

.btn-ghost {
  background: transparent;
  border-color: var(--color-border);
  color: var(--color-text);
}

/* --- active states --- */
[data-category-active="true"] {
  border-color: var(--color-primary);
  color: var(--color-primary);
  background: rgba(94, 234, 212, 0.12);
}

/* --- table --- */
table {
  width: 100%;
  border-collapse: collapse;
  background: var(--color-card);
  border-radius: var(--radius);
  overflow: hidden;
  border: 1px solid var(--color-border);
  box-shadow: var(--shadow-soft);
}

table th,
table td {
  padding: 12px 14px;
  border-bottom: 1px solid var(--color-border);
  text-align: left;
}

table tr:last-child td {
  border-bottom: none;
}

.list-inline {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
}

/* --- form helpers --- */
.remember-me {
  display: inline-flex;
  align-items: center;
  gap: 8px;
}

.remember-me input[type="checkbox"] {
  width: auto;
  margin: 0;
}

.settings-checkbox {
  align-items: center;
}

.settings-checkbox input[type="checkbox"] {
  width: auto;
  margin: 0;
}

.guest-login-actions {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 12px;
}

.guest-login-actions form {
  margin: 0;
}

.guest-login-actions .btn {
  width: 100%;
  justify-content: center;
}

form {
  display: grid;
  gap: 12px;
}

label {
  color: var(--color-muted);
  font-size: 14px;
}

input,
select,
textarea {
  width: 100%;
  padding: 10px 12px;
  border-radius: 10px;
  border: 1px solid var(--color-border);
  background: rgba(255, 255, 255, 0.04);
  color: var(--color-text);
}

input:focus,
select:focus,
textarea:focus {
  outline: 2px solid var(--color-primary);
  border-color: var(--color-primary);
}

/* --- flash --- */
.flash {
  margin: 12px 0;
  padding: 12px 14px;
  border-radius: 12px;
  border: 1px solid var(--color-border);
  background: linear-gradient(120deg, rgba(94, 234, 212, 0.15), rgba(94, 234, 212, 0.05));
}

.flash.notice {
  border-color: rgba(94, 234, 212, 0.5);
}

.flash.alert {
  border-color: rgba(245, 158, 11, 0.6);
  background: linear-gradient(120deg, rgba(245, 158, 11, 0.18), rgba(245, 158, 11, 0.08));
}

/* --- status color --- */
.status-open { color: #f59e0b; }
.status-billing { color: #38bdf8; }
.status-closed { color: #22c55e; }
.status-new { color: #facc15; }
.status-cooking { color: #38bdf8; }
.status-ready { color: #a855f7; }
.status-served { color: #22c55e; }
.status-canceled { color: #ef4444; }

/* --- quantity stepper --- */
.qty-stepper {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 14px;
  margin-top: 12px;
}

.qty-btn {
  width: 48px;
  height: 36px;
  border-radius: 8px;
  font-size: 22px;
  font-weight: 700;
  line-height: 1;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background: var(--color-surface);
  border: 1px solid var(--color-border);
  color: var(--color-text);
  cursor: pointer;
  transition: transform 0.1s ease, background 0.2s ease;
}

.qty-btn:hover {
  background: rgba(94, 234, 212, 0.15);
}

.qty-btn:active {
  transform: scale(0.92);
}

.qty-value {
  min-width: 44px;
  text-align: center;
  font-size: 18px;
  font-weight: 700;
  padding: 6px 10px;
  border-radius: 999px;
  background: var(--color-card);
  border: 1px solid var(--color-border);
}

/* --- toast --- */
.toast-stack {
  position: fixed;
  top: 70px;
  left: 50%;
  transform: translateX(-50%);
  width: calc(100vw - 24px);
  max-width: 720px;
  z-index: 9999;
  pointer-events: none;
}

.toast-stack .toast {
  pointer-events: auto;
  margin: 10px 0;
  animation: toast-in 180ms ease-out;
}

.confirm-modal {
  position: fixed;
  inset: 0;
  z-index: 10000;
  display: grid;
  place-items: center;
  padding: 24px;
}

.confirm-modal[hidden] {
  display: none;
}

.confirm-modal-backdrop {
  position: absolute;
  inset: 0;
  background: rgba(8, 12, 20, 0.72);
}

.confirm-modal-card {
  position: relative;
  z-index: 1;
  width: 92vw;
  max-width: 520px;
  padding: 20px;
  border-radius: var(--radius);
  background: #0b1020;
  border: 1px solid var(--color-border);
  box-shadow: var(--shadow);
}

/* --- table maintenance --- */
.table-maintenance td {
  position: relative;
}

.table-maintenance td,
.table-maintenance th {
  vertical-align: middle;
}

.table-maintenance tbody tr td {
  padding-top: 16px;
  padding-bottom: 16px;
}

.table-maintenance tbody tr + tr td {
  border-top: 1px solid rgba(255, 255, 255, 0.10);
}

.table-maintenance-number-form {
  display: grid;
  gap: 8px;
  justify-items: start;
}

.table-maintenance-number-form input {
  width: 120px;
}

.table-maintenance-number-form .btn {
  width: 120px;
  justify-content: center;
}

.table-maintenance-actions {
  height: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  gap: 8px;
  justify-content: space-between;
  align-items: flex-start;
}

.table-maintenance-actions .btn {
  width: 100%;
  max-width: 180px;
}

.table-maintenance-actions form {
  display: block;
  margin: 0;
  width: 100%;
}

.table-qr-cell {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 8px;
}


.table-qr-cell .btn {
  min-width: 110px;
  font-size: 14px;
  line-height: 1.2;
}

.table-qr-image {
  width: 120px;
  height: 120px;
  border-radius: 8px;
  border: 1px solid var(--color-border);
  background: #ffffff;
  padding: 6px;
}

.table-maintenance-status {
  writing-mode: vertical-rl;
  text-orientation: upright;
}

.table-maintenance-status .badge {
  min-height: 120px;
  padding: 12px 8px;
  border-radius: 999px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 0.08em;
}

.status-tag--active {
  background: rgba(34, 197, 94, 0.2);
  border-color: rgba(34, 197, 94, 0.5);
  color: #86efac;
}

.status-tag--inactive {
  background: rgba(148, 163, 184, 0.18);
  border-color: rgba(148, 163, 184, 0.45);
  color: #cbd5f5;
}

.table-filter-list {
  display: grid;
  gap: 8px;
  max-height: 220px;
  overflow: auto;
  padding: 8px;
  border-radius: 10px;
  border: 1px solid var(--color-border);
  background: rgba(255, 255, 255, 0.03);
}

/* --- animations --- */
@keyframes toast-in {
  from {
    opacity: 0;
    transform: translateY(-8px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.cart-total {
  margin: 20px 0;
}

/* --- responsive (<= 720px) --- */
@media (max-width: 720px) {
  .menu-category {
    max-height: calc(100vh - var(--footer-actions-height) - var(--mobile-topbar-height));
    width: var(--category-drawer-width);
    position: fixed;
    top: var(--mobile-topbar-height);
    bottom: var(--footer-actions-height);
    left: 0;
    z-index: 15;
    transform: translateX(calc(-1 * var(--category-drawer-width)));
    transition: transform 200ms ease;
    padding-top: 0;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
    background: #0b1020 !important;
  }

  body.is-category-drawer-open .menu-category {
    transform: translateX(0);
  }

  .category-drawer-tab {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    left: 0;
    top: 50%;
    transform: translate(-20%, -50%);
    width: 40px;
    height: 140px;
    padding: 10px 6px;
    border-radius: 0 18px 18px 0;
    border: 1px solid var(--color-border);
    background: rgba(15, 23, 42, 0.9);
    color: var(--color-text);
    z-index: 16;
    font-weight: 600;
    box-shadow: var(--shadow-soft);
    writing-mode: vertical-rl;
    text-orientation: upright;
    letter-spacing: 0.08em;
  }

  body.is-category-drawer-open .category-drawer-tab {
    transform: translate(-100%, -50%);
  }

  .category-drawer-backdrop {
    display: none;
    position: fixed;
    inset: 0;
    background: rgba(2, 6, 23, 0.45);
    z-index: 14;
  }

  body.is-category-drawer-open .category-drawer-backdrop {
    display: block;
  }

  .menu-grid {
    grid-template-columns: 1fr;
  }


  .topbar-inner {
    flex-direction: column;
    align-items: flex-start;
  }

  table th,
  table td {
    padding: 10px;
  }

  .btn {
    width: auto;
  }

  .category-child-button {
    width: 100%;
  }

  .menu-item {
    grid-template-columns: 1fr;
    grid-template-areas:
      "name"
      "price"
      "actions";
  }

  .menu-item-actions {
    justify-self: stretch;
  }

  .menu-qty-actions {
