// Design tokens
:root {
  --font-base: "Inter", "Noto Sans JP", "Helvetica Neue", system-ui, -apple-system, sans-serif;
  --color-bg: #0f172a;
  --color-surface: rgba(255, 255, 255, 0.06);
  --color-card: rgba(255, 255, 255, 0.08);
  --color-border: rgba(255, 255, 255, 0.12);
  --color-primary: #5eead4;
  --color-primary-strong: #2dd4bf;
  --color-accent: #f59e0b;
  --color-text: #e2e8f0;
  --color-muted: #94a3b8;
  --radius: 14px;
  --shadow: 0 15px 40px rgba(0, 0, 0, 0.35);
  --shadow-soft: 0 10px 24px rgba(0, 0, 0, 0.2);
  --space: 16px;
}

*,
*::before,
*::after {
  box-sizing: border-box;
}

body {
  font-family: var(--font-base);
  margin: 0;
  color: var(--color-text);
  background: radial-gradient(circle at 20% 20%, #1e293b 0%, #0b1020 45%), #0b1020;
  min-height: 100vh;
}

img {
  max-width: 100%;
}

/* --- links (button以外) --- */
a {
  color: var(--color-primary);
  text-decoration: none;
}

/* ボタン以外のリンクだけ hover で色変更 */
a:hover:not(.btn) {
  color: var(--color-primary-strong);
}

.app-shell {
  max-width: 1100px;
  margin: 0 auto;
  padding: 32px 20px 48px;
}

.auth-shell {
  padding-top: 130px;
}

.auth-card {
  max-width: 440px;
  margin: 0 auto 40px;
}

.staff-table-switcher {
  margin-top: 32px;
  margin-bottom: 16px;
}

.topbar {
  position: sticky;
  top: 0;
  z-index: 20;
  backdrop-filter: blur(14px);
  background: rgba(9, 12, 20, 0.85);
  border-bottom: 1px solid var(--color-border);
}

.topbar-inner {
  max-width: 1100px;
  margin: 0 auto;
  padding: 14px 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
}

.brand {
  font-weight: 700;
  letter-spacing: 0.04em;
  color: var(--color-primary);
}

.brand-link {
  color: inherit;
  text-decoration: none;
}

.brand-link:hover {
  color: var(--color-primary-strong);
}

.nav-links {
  display: flex;
  align-items: center;
  gap: 12px;
  flex-wrap: wrap;
}

.grid {
  display: grid;
  gap: 16px;
}

.grid-2 {
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
}

.menu-grid {
  align-items: start;
}

.menu-category {
  align-self: start;
}

.menu-qty-actions {
  display: grid;
  gap: 8px;
  justify-items: end;
}

.section {
  display: grid;
  gap: 10px;
}

.stack-sm {
  display: grid;
  gap: 8px;
}

.stack-md {
  display: grid;
  gap: 16px;
}

.footer-actions {
  display: flex;
  gap: 12px;
  flex-wrap: wrap;
}

.surface {
  background: var(--color-surface);
  border: 1px solid var(--color-border);
  border-radius: var(--radius);
  padding: 20px;
  box-shadow: var(--shadow-soft);
}

.card {
  background: var(--color-card);
  border: 1px solid var(--color-border);
  border-radius: var(--radius);
  padding: 18px;
  box-shadow: var(--shadow);
}

.hero {
  padding: 16px 18px;
  background: linear-gradient(135deg, rgba(94, 234, 212, 0.15), rgba(56, 189, 248, 0.15));
  border-radius: var(--radius);
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: var(--shadow-soft);
}

.section-title {
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 18px;
  margin: 0 0 12px;
}

.badge {
  display: inline-flex;
  align-items: center;
  padding: 4px 10px;
  border-radius: 999px;
  background: var(--color-surface);
  color: var(--color-text);
  border: 1px solid var(--color-border);
  font-size: 12px;
  letter-spacing: 0.01em;
}

.muted {
  color: var(--color-muted);
}

.pill {
  display: inline-flex;
  align-items: center;
  padding: 6px 10px;
  border-radius: 999px;
  border: 1px solid var(--color-border);
  background: var(--color-surface);
  font-size: 12px;
}

/* --- buttons (a/button/input 全部を統一) --- */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  padding: 10px 16px;
  border-radius: 12px;
  border: 1px solid transparent;
  background: var(--color-card);
  color: var(--color-text);
  cursor: pointer;
  font-weight: 600;
  text-decoration: none; /* a.btn対策 */
  transition: transform 0.1s ease, box-shadow 0.2s ease, background 0.2s ease;
}

.btn:hover {
  transform: translateY(-1px);
}

.btn:active {
  transform: translateY(0);
}

/* a/button/input の hover/focus/active で文字色がブレないように統一 */
.btn,
.btn:hover,
.btn:focus,
.btn:active,
a.btn,
a.btn:hover,
a.btn:focus,
a.btn:active,
button.btn,
button.btn:hover,
button.btn:focus,
button.btn:active,
input.btn,
input.btn:hover,
input.btn:focus,
input.btn:active {
  color: inherit;
}

.btn.btn-primary {
  background: linear-gradient(135deg, var(--color-primary), var(--color-primary-strong));
  color: #051019;
  box-shadow: 0 10px 25px rgba(45, 212, 191, 0.25);
  border-color: rgba(255, 255, 255, 0.08);
}

/* primary は常に黒文字固定 */
.btn.btn-primary:hover,
.btn.btn-primary:focus,
.btn.btn-primary:active {
  color: #051019;
  filter: brightness(1.03);
}

.btn-ghost {
  background: transparent;
  border-color: var(--color-border);
  color: var(--color-text);
}

[data-category-active="true"] {
  border-color: var(--color-primary);
  color: var(--color-primary);
  background: rgba(94, 234, 212, 0.12);
}

table {
  width: 100%;
  border-collapse: collapse;
  background: var(--color-card);
  border-radius: var(--radius);
  overflow: hidden;
  border: 1px solid var(--color-border);
  box-shadow: var(--shadow-soft);
}

table th,
table td {
  padding: 12px 14px;
  border-bottom: 1px solid var(--color-border);
  text-align: left;
}

table tr:last-child td {
  border-bottom: none;
}

.list-inline {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
}

form {
  display: grid;
  gap: 12px;
}

label {
  color: var(--color-muted);
  font-size: 14px;
}

input,
select,
textarea {
  width: 100%;
  padding: 10px 12px;
  border-radius: 10px;
  border: 1px solid var(--color-border);
  background: rgba(255, 255, 255, 0.04);
  color: var(--color-text);
}

input:focus,
select:focus,
textarea:focus {
  outline: 2px solid var(--color-primary);
  border-color: var(--color-primary);
}

.flash {
  margin: 12px 0;
  padding: 12px 14px;
  border-radius: 12px;
  border: 1px solid var(--color-border);
  background: linear-gradient(120deg, rgba(94, 234, 212, 0.15), rgba(94, 234, 212, 0.05));
}

.flash.notice {
  border-color: rgba(94, 234, 212, 0.5);
}

.flash.alert {
  border-color: rgba(245, 158, 11, 0.6);
  background: linear-gradient(120deg, rgba(245, 158, 11, 0.18), rgba(245, 158, 11, 0.08));
}

.status-open { color: #f59e0b; }
.status-billing { color: #38bdf8; }
.status-closed { color: #22c55e; }
.status-new { color: #facc15; }
.status-cooking { color: #38bdf8; }
.status-ready { color: #a855f7; }
.status-served { color: #22c55e; }
.status-canceled { color: #ef4444; }

.qty-stepper {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 14px;
  margin-top: 12px;
}

.qty-btn {
  width: 44px;
  height: 44px;
  border-radius: 50%;
  font-size: 22px;
  font-weight: 700;
  line-height: 1;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background: var(--color-surface);
  border: 1px solid var(--color-border);
  color: var(--color-text);
  cursor: pointer;
  transition: transform 0.1s ease, background 0.2s ease;
}

.qty-btn:hover {
  background: rgba(94, 234, 212, 0.15);
}

.qty-btn:active {
  transform: scale(0.92);
}

.qty-value {
  min-width: 44px;
  text-align: center;
  font-size: 18px;
  font-weight: 700;
  padding: 6px 10px;
  border-radius: 999px;
  background: var(--color-card);
  border: 1px solid var(--color-border);
}

.toast-stack {
  position: fixed;
  top: 70px;
  left: 50%;
  transform: translateX(-50%);
  width: calc(100vw - 24px);
  max-width: 720px;
  z-index: 9999;
  pointer-events: none;
}

.toast-stack .toast {
  pointer-events: auto;
  margin: 10px 0;
  animation: toast-in 180ms ease-out;
}

.confirm-modal {
  position: fixed;
  inset: 0;
  z-index: 10000;
  display: grid;
  place-items: center;
  padding: 24px;
}

.confirm-modal[hidden] {
  display: none;
}

.confirm-modal-backdrop {
  position: absolute;
  inset: 0;
  background: rgba(8, 12, 20, 0.72);
}

.confirm-modal-card {
  position: relative;
  z-index: 1;
  width: 92vw;
  max-width: 520px;
  padding: 20px;
  border-radius: var(--radius);
  background: #0b1020;
  border: 1px solid var(--color-border);
  box-shadow: var(--shadow);
}

.table-maintenance td {
  position: relative;
}

.table-maintenance td,
.table-maintenance th {
  vertical-align: middle;
}

.table-maintenance tbody tr td {
  padding-top: 16px;
  padding-bottom: 16px;
}

.table-maintenance tbody tr + tr td {
  border-top: 1px solid rgba(255, 255, 255, 0.10);
}

.table-maintenance-number-form {
  display: grid;
  gap: 8px;
  justify-items: start;
}

.table-maintenance-number-form input {
  width: 120px;
}

.table-maintenance-number-form .btn {
  width: 120px;
  justify-content: center;
}

.table-maintenance-actions {
  height: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  gap: 8px;
  justify-content: space-between;
  align-items: flex-start;
}

.table-maintenance-actions .btn {
  width: 100%;
  max-width: 180px;
}

.table-maintenance-actions form {
  display: block;
  margin: 0;
  width: 100%;
}

.table-qr-cell {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 8px;
}


.table-qr-cell .btn {
  min-width: 110px;
  font-size: 14px;
  line-height: 1.2;
}

.table-qr-image {
  width: 120px;
  height: 120px;
  border-radius: 8px;
  border: 1px solid var(--color-border);
  background: #ffffff;
  padding: 6px;
}

.table-maintenance-status {
  writing-mode: vertical-rl;
  text-orientation: upright;
}

.table-maintenance-status .badge {
  min-height: 120px;
  padding: 12px 8px;
  border-radius: 999px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 0.08em;
}

.status-tag--active {
  background: rgba(34, 197, 94, 0.2);
  border-color: rgba(34, 197, 94, 0.5);
  color: #86efac;
}

.status-tag--inactive {
  background: rgba(148, 163, 184, 0.18);
  border-color: rgba(148, 163, 184, 0.45);
  color: #cbd5f5;
}

.table-filter-list {
  display: grid;
  gap: 8px;
  max-height: 220px;
  overflow: auto;
  padding: 8px;
  border-radius: 10px;
  border: 1px solid var(--color-border);
  background: rgba(255, 255, 255, 0.03);
}

@keyframes toast-in {
  from {
    opacity: 0;
    transform: translateY(-8px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.cart-total {
  margin: 20px 0;
}

@media (max-width: 720px) {
  .topbar-inner {
    flex-direction: column;
    align-items: flex-start;
  }

  table th,
  table td {
    padding: 10px;
  }

  .btn {
    width: auto;
  }
}
